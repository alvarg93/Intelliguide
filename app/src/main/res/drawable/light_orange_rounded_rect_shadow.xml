<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <solid android:color="@color/main_blue" />

            <size
                android:width="30dp"
                android:height="30dp" />

            <corners
                android:radius="5dip"/>

        </shape>
    </item>

    <item android:top="1dp">
        <shape android:shape="rectangle">

            <solid android:color="@color/main_blue_light" />

            <size
                android:width="30dp"
                android:height="30dp" />

            <corners
                android:radius="5dip"/>

        </shape>
    </item>

</layer-list>