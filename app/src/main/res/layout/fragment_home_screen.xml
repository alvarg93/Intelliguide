<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:focusableInTouchMode="true"
    tools:context="com.superevilmegateam.intelliguide.fragments.HomeScreenFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/main_screen_header"
        android:fontFamily="sans-serif-light"
        android:background="@color/white_transparent"
        android:textColor="@color/text_main"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/main_screen_category_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:dividerHeight="2dp"
        android:divider="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_transparent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/use_my_localization"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/text_main"

            android:textSize="18dp" />

        <Switch
            android:id="@+id/main_screen_loc_switch"
            android:layout_width="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:thumb="@drawable/switch_bcg"
            android:track="@drawable/track_bcg"
            android:layout_gravity="right" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <EditText
        android:id="@+id/main_screen_loc_edit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_gravity="bottom"
        android:hint="WÅ‚asna lokalizacja"
        android:textColorHint="@color/text_main"
        android:textColor="@color/text_main" />


        <EditText
            android:id="@+id/main_screen_dist_edit"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="km"
            android:inputType="number"
            android:layout_gravity="bottom"
            android:textColorHint="@color/text_main"
            android:textColor="@color/text_main" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/main_screen_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/accent_rounded_rect"
        android:text="Szukaj"
        android:textColor="#fff"
        android:textSize="20dp" />


</LinearLayout>
